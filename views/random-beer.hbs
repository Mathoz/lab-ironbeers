<section id="random">
    {{#each random}}
        <div>
            <img src="{{this.image_url}}" alt="Beer image">
            <article>
                <h3>{{this.name}}</h3>
                <h4>{{this.tagline}}</h4>
                <p>{{this.description}}</p>
                <p><strong>Food pairing</strong></p>
                <ul>
                    {{#each this.food_pairing}}
                        <li>{{this}}</li>
                    {{/each}}
                </ul>
                <p><strong>Brewers Tips:</strong> {{this.brewers_tips}}</p>
            </article>
        </div>
    {{/each}}
</section>

